<Manager>:
    SnIndex:
		name:'index'

	AddScreen:
		name:'add'

    SnUpdate:
        name:'update'


<SnIndex>:
    Boxlv:
        spacing:'3dp'

        Boxlv:
            size_hint_y:None
            height:'30dp'
            spacing:'1dp'
            canvas.before:
                Color:
                    rgba:0,0,200,1
                Rectangle:
                    pos:self.pos
                    size:self.size

            BoxLayout:
                spacing:'10dp'

                Label:
                    text_size: self.width * 0.9, self.height
                    text:'PassWordManager'
                    halign:'left'

                Button:
                    background_normal:'appimages/addicon.png'
                    background_down:'appimages/addicon.png'
                    on_release: app.root.current = 'add'
                    size_hint:(None,None)
                    width:'30dp'
                    height:'30dp'
                    pos_hint:{'x':0,'y':-1}

            BoxLayout:
                Label:
                    text:'Name'
                Label:
                    text:'Password'
                Label:
                    text:'Action'

        ScrollView:
            do_scroll_x:False
            do_scroll_y:True

            BoxLayout:
                id:boxpw
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
                spacing:'10dp'


<AddScreen>:
    Boxlv:
        ActionBarBase:
            ActionViewBase:
                ApBase:
                    app_icon:''
                    title:'Update'

        GridLayout:
            cols:2
            padding:['20dp',0,'50dp',0]

            Boxlv:
                spacing:'30dp'

                Labelf:
                    text:'Name:'
                Labelf:
                    text:'Password:'

            Boxlv:
                spacing:'30dp'

                TextInputApp:
                    id:ti_name

                TextInputApp:
                    id:ti_password

        FloatLayout:
            BtnBase:
                pos_hint:{'x':0.4,'y':0.5}
                background_color:0,0,200,1
                text:'Add'
                on_release: root.savePassword()


<SnUpdate>:
    Boxlv:
        ActionBarBase:
            ActionViewBase:
                ApBase:
                    app_icon:''
                    title:'Add'

        Labelf:
            id:pwname
            font_size:0

        GridLayout:
            cols:2
            padding:['20dp',0,'50dp',0]
            size_hint:(1,0.6)

            Boxlv:
                spacing:'30dp'

                Labelf:
                    text:'Name:'
                Labelf:
                    text:'Password:'
            Boxlv:
                spacing:'30dp'

                TextInputApp:
                    id:pwn_update
                TextInputApp:
                    id:pwp_update

        Boxlv:
            spacing:'20dp'
            padding:[0,'20dp',0,'20dp']

            BtnBase:
                background_color:200,0,0,1
                pos_hint:{'x':0.4,'y':0.0}
                text:'delete'
                on_release:root.deleteRegister()

            BtnBase:
                background_color:0,0,200,1
                pos_hint:{'x':0.4,'y':0.0}
                text:'update'
                on_release:root.updatePassword()



<BoxPassWord>:
    orientation:'horizontal'
    size_hint_y:None
    height:'100dp'
    padding:['10dp',0,'10dp','20dp']
    canvas.before:
        Color:
            rgba:0.85,0.85,0.85,0.7
        Rectangle:
            pos:self.pos
            size:self.size

    Labelf:
        id:name
    Labelf:
        id:pw
    Button:
        background_normal:'appimages/updateicon.png'
        background_down:'appimages/updateicon.png'
        size_hint:(None, None)
        width:'50dp'
        height:'50dp'
        on_release:app.root.changeScreen(name.text)


<Boxlv@BoxLayout>:
	orientation:'vertical'
    spacing:'4dp'
    canvas.before:
        Color:
            rgba:0.9,0.9,0.9,1
        Rectangle:
            pos:self.pos
            size:self.size


<Labelf@Label>:
    size_hint_y:None
    height:'35dp'
	font_size:'5pt'
	halign:'left'
	valign:'top'
	text_size: root.width, root.height
	color:0,0,0,0.5

<TextInputApp@TextInput>:
    size_hint_y:None
    height:'35dp'


<BoxBase@BoxLayout>:
    orientation:'vertical'
    canvas.before:
        Color:
            rgba:0.9,0.9,0.9,1
        Rectangle:
            pos:self.pos
            size:self.size

    ActionBar:
        ActionView:
            id:avbase
            size_hint_y:None
            height:'30dp'
            canvas.before:
                Color:
                    rgba:0,0,200,1
                Rectangle:
                    pos:self.pos
                    size:self.size

            ActionPrevious:
                id:ap_base
                on_release: app.root.current = 'index'


<ActionViewBase@ActionView>:
    canvas.before:
        Color:
            rgba:0,0,200,1
        Rectangle:
            pos:self.pos
            size:self.size

<ActionBarBase@ActionBar>:
    size_hint:(1,0.2)

<ApBase@ActionPrevious>:
    on_release:app.root.current = 'index'

<BtnBase@Button>:
    size_hint:(None,None)
    height:'50dp'
    width:'100dp'
